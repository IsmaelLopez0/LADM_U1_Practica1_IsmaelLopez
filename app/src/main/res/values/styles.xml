<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textActivity1">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/transparente</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="textActivity2">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="nombreSeccionActivity3">
        <item name="android:background">@color/fondoBlanco</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="seccionAppsActivity3">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/fondoBlanco</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>